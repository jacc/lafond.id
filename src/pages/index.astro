---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Jack LaFond</title>
    <link
      rel="preload"
      href="/fonts/BerkeleyMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <ViewTransitions />
    <script
      defer
      data-domain="jacklafond.com"
      src="https://plausible.verbose.faith/js/script.js"></script>
  </head>
  <div class="flex h-screen p-8 max-w-4xl m-auto" transition:animate="fade">
    <div class="my-auto w-full">
      <div class="flex space-x-12 font-mono">
        <p class="font-bold text-2xl font-mono">Jack LaFond</p>
      </div>
      <div>
        <p class="font-mono">
          Cybersecurity professional & software engineer.
        </p>
        <p class="font-mono text-black/60 text-sm mt-1">
          OSINT, penetration testing, automation, and breaking things to understand how they work.
        </p>
      </div>
      <div class="mt-4">
        <p class="font-bold font-mono text-lg">Experience</p>
        <div class="mt-2">
          {
            work.map((project, i) => (
              <div class="flex gap-2">
                <div class="flex flex-col items-center shrink-0">
                  <Image
                    src={project.icon}
                    alt={`${project.company} logo`}
                    width="24"
                    height="24"
                    class="w-6 h-6 shrink-0"
                    loading="eager"
                  />
                  {i < work.length - 1 && (
                    <span class="font-mono text-black/40 select-none leading-tight">|</span>
                  )}
                </div>
                <a class="grid md:flex md:justify-between w-full" href={project.link}>
                  <p class="font-mono whitespace-nowrap hover:underline hover:cursor-pointer">
                    <span class="font-bold">{project.company}</span> <span class="text-black/40">({project.time})</span>
                  </p>
                  <p class="font-mono">{project.description}</p>
                </a>
              </div>
            ))
          }
        </div>
      </div>
      <div class="mt-4">
        <p class="font-bold font-mono text-lg">Education</p>
        <div class="mt-2">
          <div class="flex gap-2">
            <div class="flex flex-col items-center shrink-0">
              <Image
                src="/ut_logo.jpeg"
                alt="University of Tampa logo"
                width="24"
                height="24"
                class="w-6 h-6 shrink-0"
              />
              <span class="font-mono text-black/40 select-none leading-tight">|</span>
            </div>
            <div class="grid md:flex md:justify-between w-full">
              <p class="font-mono whitespace-nowrap">
                <span class="font-bold">University of Tampa</span> <span class="text-black/40">(2025/26)</span>
              </p>
              <p class="font-mono">MBA, Cybersecurity</p>
            </div>
          </div>
          <div class="flex gap-2">
            <div class="flex flex-col items-center shrink-0">
              <Image
                src="/ut_logo.jpeg"
                alt="University of Tampa logo"
                width="24"
                height="24"
                class="w-6 h-6 shrink-0"
              />
            </div>
            <div class="grid md:flex md:justify-between w-full">
              <p class="font-mono whitespace-nowrap">
                <span class="font-bold">University of Tampa</span> <span class="text-black/40">(2021/25)</span>
              </p>
              <p class="font-mono">BS Cybersecurity, minor in CS</p>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-4">
        <p class="font-bold font-mono text-lg">Projects</p>
        <div class="mt-2 space-y-1">
          {
            projects.map((project) => (
              <a class="grid md:flex md:justify-between" href={project.link}>
                <div class="flex space-x-2">
                  {project.icon && (
                    <Image
                      src={project.icon}
                      alt="Project icon."
                      width="24"
                      height="24"
                      class="rounded-md"
                    />
                  )}
                  <p class="font-mono font-bold whitespace-nowrap hover:underline hover:cursor-pointer">
                    {project.name}
                  </p>
                </div>
                <p class="font-mono">{project.description}</p>
              </a>
            ))
          }
        </div>
      </div>
      <div class="mt-4 font-mono text-sm text-black/50">
        <p class="select-none">---</p>
        <div class="mt-2 flex flex-wrap gap-x-2">
          {
            additionals.map((project, i) => (
              <>
                <a
                  href={project.link}
                  class="hover:text-black transition-colors"
                  {...(project.email ? { "data-email": true, onclick: `event.preventDefault();window.location.href='mai'+'lto:'+'jack'+'@'+'jacklafond'+'.com'` } : {})}
                >
                  [{project.name.toLowerCase()}]
                </a>
                {i < additionals.length - 1 && <span class="select-none">/</span>}
              </>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</html>
